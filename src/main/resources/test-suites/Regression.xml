<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Regression Test" parallel="tests" thread-count="10">
    <test name="Global UI" parallel="tests" thread-count="10">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.global.footer.FooterTest" />
            <class name="tests.computer.BuyingStandardComputerTest" />
        </classes>
    </test>
    <test name="Buying Cheap Computer" parallel="tests" thread-count="10">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="tests.computer.BuyingCheapComputerTest" />
        </classes>
    </test>
</suite>